{
    "root": true,
    "env": {
        "es6": true,
        "mocha": true,
        "node": true
    },
    "plugins": [
        "no-only-tests",
        "chai-friendly"
    ],
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "max-len": [
            "warn",
            170
        ],
        "func-names": [
            "off"
        ],
        "global-require": [
            "off"
        ],
        "no-global-assign": [
            "warn"
        ],
        "no-unused-expressions": 0,
        "chai-friendly/no-unused-expressions": 2,
        "import/no-dynamic-require": [
            "off"
        ],
        "spaced-comment": [
            "error",
            "always",
            {
                "line": {
                    "markers": [
                        "/"
                    ]
                }
            }
        ],
        "no-only-tests/no-only-tests": "error"
    }
}